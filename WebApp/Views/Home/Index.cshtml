@model System.Collections.Generic.List<WebApp.Models.DB.Usuario>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Users</h1>
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="newUser">New</a>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.IdUsuario</td>
                <td>@user.Name</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="delete" asp-route-idUser="@user.IdUsuario">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>